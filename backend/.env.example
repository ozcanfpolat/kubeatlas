# ==============================================
# KubeAtlas Backend Environment Configuration
# ==============================================

# Server
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
GIN_MODE=release

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=kubeatlas
DATABASE_USER=kubeatlas
DATABASE_PASSWORD=kubeatlas_secret
DATABASE_SSL_MODE=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MIN_CONNECTIONS=5

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_HOURS=24
JWT_REFRESH_TOKEN_HOURS=168

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./data/uploads

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Encryption (for kubeconfig/tokens)
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Sync
SYNC_INTERVAL_MINUTES=30
SYNC_TIMEOUT_SECONDS=300

# Optional: Slack notifications
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=

# Optional: OpenTelemetry
OTEL_ENABLED=false
OTEL_ENDPOINT=
OTEL_SERVICE_NAME=kubeatlas-api
