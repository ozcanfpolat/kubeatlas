# ============================================
# KubeAtlas Environment Configuration
# ============================================
# Copy this file to .env and update values

# Version
VERSION=latest

# ============================================
# Database Configuration
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=kubeatlas
DB_PASSWORD=your-secure-password-here
DB_NAME=kubeatlas
DB_SSLMODE=require
DB_MAX_CONNS=25

# ============================================
# JWT Configuration
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_HOURS=168

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=https://kubeatlas.example.com

# ============================================
# Storage Configuration
# ============================================
STORAGE_TYPE=local
# For S3:
# STORAGE_TYPE=s3
# S3_BUCKET=kubeatlas-documents
# S3_REGION=eu-central-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# SMTP Configuration (Optional)
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@kubeatlas.example.com

# ============================================
# Kubernetes Configuration
# ============================================
# Default kubeconfig path for in-cluster detection
# KUBECONFIG=/path/to/kubeconfig
